create database myProject;
use myProject;

create table flight (
      id int primary key auto_increment,
aircraftNumber int not null,
departureAirplane_id int not null,
departureTime datetime not null default now(),
arrivalAirport_id int not null,
arrivalTime datetime not null,
foreign key (departureAirplane_id) references airports(id),
foreign key (arrivalAirport_id) references airports(id)
);

create table airports(
id int primary key auto_increment,
airportName varchar(50) not null,
city varchar(50) not null,
county varchar(50) not null
);